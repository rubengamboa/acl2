# This is a parallel version of Makefile-subdirs.  Keep them in sync.

# This file is to be included in other Makefiles.  The include should be
# preceded by a definition of DIRS, the list of subdirectories.

.PHONY: top
top: $(DIRS)

.PHONY: $(DIRS)
$(DIRS):
	if [ -f $@/Makefile ]; then \
	cd $@ ; $(MAKE) ; cd .. ; fi

.PHONY: fasl
fasl: fasl-more

.PHONY: fasl-more
fasl-more:
	@for dir in $(DIRS) ; \
	do \
	if [ -f $$dir/Makefile ]; then \
	(cd $$dir ; \
	$(MAKE) fasl ; \
	cd ..) ; \
	fi \
	done

.PHONY: fas
fas: fas-more

.PHONY: fas-more
fas-more:
	@for dir in $(DIRS) ; \
	do \
	if [ -f $$dir/Makefile ]; then \
	(cd $$dir ; \
	$(MAKE) fas ; \
	cd ..) ; \
	fi \
	done

.PHONY: o
o: o-more

.PHONY: o-more
o-more:
